---
import MapLocation from '@/components/home/MapLocation'
import NowPlaying from '@/components/home/NowPlaying'
import { Location } from '../icons/Location'
import CategoryBadge from './CategoryBadge'
---

<div class='grid grid-cols-3 gap-4 max-md:grid-cols-1'>
  <div class='relative col-span-1 aspect-square'>
    <CategoryBadge
      className='absolute left-4 top-4'
      text='Location'
      icon={Location}
    />
    <!-- <MapLocation className='rounded-3xl' client:only='react' /> -->
  </div>

  <div
    class='col-span-2 grid grid-cols-8 grid-rows-3 gap-4 max-md:grid-rows-none'
  >
    <div class='relative col-span-5 row-span-1 max-md:col-span-8'>
      <CategoryBadge
        className='absolute right-4 top-4'
        text='Location'
        icon={Location}
      />
      <NowPlaying
        client:only='react'
        className='rounded-2xl border border-slate-700'
      />
    </div>

    <div class='col-span-3 row-span-1 bg-red-400 max-md:col-span-8'>tips</div>

    <div class='col-span-full row-span-2 grid grid-cols-3 gap-4'>
      <div class='col-span-1 bg-red-400 max-md:col-span-3'>typing speed</div>
      <div class='col-span-2 bg-red-400 max-md:col-span-3'>stack</div>
    </div>
  </div>
</div>

<div class='mt-4 grid grid-cols-2 gap-4 max-md:grid-cols-1'>
  <div class='col-span-1 aspect-[2/1] bg-red-400'>github</div>
  <div class='col-span-1 grid grid-cols-7 gap-4 max-md:grid-cols-1'>
    <div class='col-span-4 bg-red-400'>work</div>
    <div class='col-span-3 bg-red-400'>contact</div>
  </div>
</div>
