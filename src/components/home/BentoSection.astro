---
import { cn } from '@/lib/utils'
import { Location } from '../icons/Location'
import BentoBadge from './bento/BentoBadge'
import BentoCard from './bento/BentoCard'
import BentoItemContact from './bento/BentoItemContact'
import BentoItemFeaturedWork from './bento/BentoItemFeaturedWork'
import BentoItemGithubActivity from './bento/BentoItemGithubActivity'
import BentoItemMapLocation from './bento/BentoItemMapLocation'
import BentoItemNowPlaying from './bento/BentoItemNowPlaying'
import BentoItemTechStack from './bento/BentoItemTechStack'
import BentoItemTips from './bento/BentoItemTips'
import BentoItemTypingSpeed from './bento/BentoItemTypingSpeed'
import BentoItemSocialMedia from './bento/BentoItemSocialMedia'
---

<script>
  document.getElementById('cards')!.onmousemove = (e) => {
    for (const card of document.getElementsByClassName('card')) {
      const rect = card.getBoundingClientRect()
      const x = e.clientX - rect.left
      const y = e.clientY - rect.top

      ;(card as HTMLDivElement).style.setProperty('--mouse-x', `${x}px`)
      ;(card as HTMLDivElement).style.setProperty('--mouse-y', `${y}px`)
    }
  }
</script>

<div
  id='cards'
  class:list={[
    'auto-rows-[minmax(0,1fr)] grid-cols-[repeat(36,_minmax(0,_1fr))] gap-4',
    'max-md:space-y-4 md:grid'
  ]}
>
  <!-- Location & social medias -->
  <div
    class='relative col-start-1 col-end-11 row-start-1 row-end-10 aspect-square max-md:hidden'
  >
    <BentoBadge
      className={{ component: 'absolute left-4 top-4' }}
      text='Location'
      icon={Location}
    />
    <BentoItemMapLocation className='rounded-3xl' client:only='react' />
  </div>

  <div
    class:list={[
      'col-start-1 col-end-11 row-start-10 row-end-13',
      'grid grid-cols-3 gap-4'
    ]}
  >
    <BentoCard className='h-full'>
      <BentoItemSocialMedia />
    </BentoCard>
    <BentoCard className='h-full'>
      <BentoItemSocialMedia />
    </BentoCard>
    <BentoCard className='h-full'>
      <BentoItemSocialMedia />
    </BentoCard>
  </div>

  <!-- Works -->
  <BentoCard
    className={cn(
      'col-start-11 col-end-[24] row-start-1 row-end-10',
      'max-lg:col-start-16 max-lg:col-end-25 max-lg:row-start-12 max-lg:row-end-18'
    )}
  >
    <BentoItemFeaturedWork />
  </BentoCard>

  <!-- TODO: cta for discover more projects -->
  <BentoCard
    className={cn('col-start-11 col-end-[24] row-start-10 row-end-13')}
  >
    <BentoItemSocialMedia />
  </BentoCard>

  <!-- Spotify & Monkeytype -->
  <BentoCard
    className={cn(
      'col-start-[24] col-end-[37] row-start-1 row-end-5',
      'max-lg:col-end-17 max-lg:row-end-7'
    )}
  >
    <BentoItemNowPlaying client:only='react' />
  </BentoCard>

  <BentoCard
    className={cn(
      'col-start-[24] col-end-[37] row-start-5 row-end-13',
      'max-lg:col-start-1 max-lg:col-end-12 max-lg:row-start-7 max-lg:row-end-12'
    )}
  >
    <BentoItemTypingSpeed />
  </BentoCard>

  <BentoCard
    hoverable={false}
    className={cn(
      'col-start-1 col-end-[19] row-start-13 row-end-[21]',
      'max-lg:col-start-1 max-lg:col-end-16 max-lg:row-start-12 max-lg:row-end-18'
    )}
  >
    <BentoItemGithubActivity client:only='react' />
  </BentoCard>

  <BentoCard
    className={cn(
      'col-start-[19] col-end-[37] row-start-13 row-end-[21]',
      'max-lg:col-start-12 max-lg:col-end-25 max-lg:row-start-7 max-lg:row-end-12'
    )}
  >
    <BentoItemTechStack />
  </BentoCard>

  <!-- <BentoCard
    className={cn(
      'col-start-20 col-end-25 row-start-7 row-end-12',
      'md:max-lg:opacity-0'
    )}
  >
    <BentoItemContact />
  </BentoCard> -->
</div>

<style is:global>
  #cards {
    --card-border: #5b6c84;
    --card-background: #11161d;
  }

  /* source: https://codepen.io/Hyperplexed/pen/MWQeYLW */
  #cards:hover > .card::after {
    opacity: 1;
  }

  .card {
    /* border */
    background-color: rgb(46, 62, 84);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .card:hover::before {
    opacity: 1;
  }

  .card::before,
  .card::after {
    border-radius: inherit;
    content: '';
    height: 100%;
    left: 0px;
    opacity: 0;
    position: absolute;
    top: 0px;
    transition: opacity 500ms;
    width: 100%;
  }

  .card::before {
    background: radial-gradient(
      800px circle at var(--mouse-x) var(--mouse-y),
      rgba(255, 255, 255, 0.06),
      transparent 40%
    );
    z-index: 3;
  }

  .card::after {
    /* border hover */
    background: radial-gradient(
      600px circle at var(--mouse-x) var(--mouse-y),
      var(--card-border),
      transparent 50%
    );
    z-index: 1;
  }

  .card > .card-content {
    /* card background */
    background-color: var(--card-background);
    border-radius: inherit;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    inset: 1px;
    /* position: absolute; */
    z-index: 2;
  }
</style>
