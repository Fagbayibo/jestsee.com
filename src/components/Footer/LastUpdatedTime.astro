---
import client from '@/lib/client'
import { formatDateByTimeZone } from '@/lib/utils'

const response = await client.api.github['repo-info'][':owner'][
  ':repository'
].$get({
  param: {
    owner: 'jestsee',
    repository: 'portfolio-revamp'
  }
})
const data = response.status === 200 ? await response.json() : null

if (!data) return

const date = new Date(data.pushedAt)

const formattedDate = formatDateByTimeZone(date)
---

{
  data ? (
    <p class='text-xs text-zinc-600 min-[961px]:self-end'>
      Last updated by Jesica <br class='xs:hidden' /> on {formattedDate} UTC+7
    </p>
  ) : (
    // TODO: handle error
    <p>Something went wrong ðŸ˜”</p>
  )
}
