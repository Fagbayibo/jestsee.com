---
import bookmarkedImage from '@/assets/project_bookmarked.jpeg'
import { GithubOutline } from '@/components/icons/GithubOutline'
import { Globe } from '@/components/icons/Globe'
import { Group } from '@/components/icons/Group'
import { Telegram } from '@/components/icons/Telegram'
import Image from '@/components/Image'
import Link from '@/components/Link'
import ScrollProgressBar from '@/components/ui/scroll-progress-bar'
import BaseLayout from '@/layouts/BaseLayout.astro'

const LINKS = [
  { icon: GithubOutline, name: 'Repository', href: 'https://github.com' },
  { icon: Globe, name: 'Website', href: 'https://jestsee.vercel.app' },
  { icon: Telegram, name: 'Telegram', href: 'https://t.me/jestsee' }
]
---

<BaseLayout
  title='Bookmarked: Your Go-To Tool for Curating Tweets in Notion'
  class='space-y-12'
>
  <ScrollProgressBar type='bar' color='gray' client:only='react' />
  <section class='space-y-5 sm:pt-12'>
    <h2
      class='border-l border-l-gray-300 px-2 leading-tight tracking-wider text-gray-300'
    >
      2024
    </h2>
    <h1
      class='text-[clamp(28px,5vw,48px)] font-bold leading-none'
      transition:name='pls'
    >
      Bookmarked: Your Go-To Tool for <br class='max-md:hidden' />
      Curating Tweets in Notion
    </h1>
    <h3 class='font-medium tracking-wide text-gray-300 max-sm:text-sm'>
      <Group className='inline-block pb-[2px]' />
      Solo project &mdash; A full-stack application that enables users to save tweets
      to Notion via Telegram bot.
    </h3>
    <div class='flex flex-wrap gap-2 pt-2 sm:gap-4'>
      {
        LINKS.map(({ icon: Icon, href, name }) => (
          <Link
            href={href}
            class:list={[
              'flex items-center gap-2 rounded-lg text-sm tracking-wider text-gray-300 max-sm:text-xs',
              'border border-gray-600 px-3 py-2',
              'bg-gradient-to-t from-slate-800/50 to-gray-800/0',
              'transition-all duration-200 hover:border-gray-500 hover:from-slate-800'
            ]}
          >
            <Icon className='size-4' /> {name}
          </Link>
        ))
      }
    </div>
  </section>
  <section class='max-h-[560px] overflow-clip rounded-lg'>
    <Image
      src={bookmarkedImage}
      alt='Bookmarked Notion page'
      transition:name='ass'
    />
  </section>
