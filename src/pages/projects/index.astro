---
import { getCollection } from 'astro:content'

import ProjectCard from '@/components/ProjectCard'
import ProjectHeader from '@/components/ProjectHeader.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'

import Decorator from '../_components/Decorator.astro'

const projects = await getCollection('projects')
---

<BaseLayout>
  <Decorator slot='decorator' />
  <ProjectHeader class='mt-16 sm:mt-36' transition:name='project-header' />
  <section class='mt-12 grid gap-12 sm:grid-cols-2 lg:grid-cols-3'>
    {projects.map(({ slug, data }) => <ProjectCard slug={slug} {...data} />)}
  </section>
</BaseLayout>
